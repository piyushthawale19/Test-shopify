{%- if section.settings.announcement_text != blank -%}
  <div class="announcement-bar" role="region" aria-label="{{ 'sections.announcement_bar.announcement' | t }}">
    <div class="container">
      <p class="announcement-bar__text">{{ section.settings.announcement_text }}</p>
    </div>
  </div>
{%- endif -%}

