<footer class="site-footer" role="contentinfo">
  <div class="container">
    <div class="footer__grid">

      {%- comment -%} Brand Column {%- endcomment -%}
      <div class="footer__col">
        <div class="header__logo">
          <a href="{{ routes.root_url }}" aria-label="{{ shop.name }}">
            {%- if settings.logo != blank -%}
              <img
                src="{{ settings.logo | image_url: width: settings.logo_max_width }}"
                alt="{{ settings.logo.alt | default: shop.name | escape }}"
                width="{{ settings.logo_max_width }}"
                loading="lazy"
              >
            {%- else -%}
              <span class="header__logo-text" style="color: var(--color-white);">
                {{ settings.logo_text | default: shop.name }}
              </span>
            {%- endif -%}
          </a>
        </div>
        {%- if section.settings.footer_description != blank -%}
          <p class="footer__brand-description">{{ section.settings.footer_description }}</p>
        {%- endif -%}

        <div class="footer__social">
          {%- if settings.social_facebook != blank -%}
            <a href="{{ settings.social_facebook }}" class="footer__social-link" aria-label="Facebook" target="_blank" rel="noopener noreferrer">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg>
            </a>
          {%- endif -%}
          {%- if settings.social_instagram != blank -%}
            <a href="{{ settings.social_instagram }}" class="footer__social-link" aria-label="Instagram" target="_blank" rel="noopener noreferrer">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><rect x="2" y="2" width="20" height="20" rx="5" ry="5" fill="none" stroke="currentColor" stroke-width="2"/><circle cx="12" cy="12" r="5" fill="none" stroke="currentColor" stroke-width="2"/><circle cx="17.5" cy="6.5" r="1.5"/></svg>
            </a>
          {%- endif -%}
          {%- if settings.social_twitter != blank -%}
            <a href="{{ settings.social_twitter }}" class="footer__social-link" aria-label="Twitter" target="_blank" rel="noopener noreferrer">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/></svg>
            </a>
          {%- endif -%}
          {%- if settings.social_youtube != blank -%}
            <a href="{{ settings.social_youtube }}" class="footer__social-link" aria-label="YouTube" target="_blank" rel="noopener noreferrer">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19.1c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2 29 29 0 00.46-5.25 29 29 0 00-.46-5.43z"/><polygon points="9.75,15.02 15.5,11.75 9.75,8.48" fill="#fff"/></svg>
            </a>
          {%- endif -%}
          {%- if settings.social_pinterest != blank -%}
            <a href="{{ settings.social_pinterest }}" class="footer__social-link" aria-label="Pinterest" target="_blank" rel="noopener noreferrer">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 0C5.373 0 0 5.373 0 12c0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.632-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24 12 24c6.627 0 12-5.373 12-12S18.627 0 12 0z"/></svg>
            </a>
          {%- endif -%}
        </div>
      </div>

      {%- comment -%} Quick Links {%- endcomment -%}
      <div class="footer__col">
        <h4 class="footer__heading">{{ 'sections.footer.quick_links' | t }}</h4>
        <div class="footer__links">
          {%- for link in section.settings.quick_links.links -%}
            <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
          {%- endfor -%}
        </div>
      </div>

      {%- comment -%} Customer Service {%- endcomment -%}
      <div class="footer__col">
        <h4 class="footer__heading">{{ 'sections.footer.customer_service' | t }}</h4>
        <div class="footer__links">
          {%- for link in section.settings.service_links.links -%}
            <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
          {%- endfor -%}
        </div>
      </div>

      {%- comment -%} Follow Us {%- endcomment -%}
      <div class="footer__col">
        <h4 class="footer__heading">{{ 'sections.footer.follow_us' | t }}</h4>
        <div class="footer__links">
          {%- if settings.social_instagram != blank -%}
            <a href="{{ settings.social_instagram }}" class="footer__link" target="_blank" rel="noopener noreferrer">Instagram</a>
          {%- endif -%}
          {%- if settings.social_facebook != blank -%}
            <a href="{{ settings.social_facebook }}" class="footer__link" target="_blank" rel="noopener noreferrer">Facebook</a>
          {%- endif -%}
          {%- if settings.social_youtube != blank -%}
            <a href="{{ settings.social_youtube }}" class="footer__link" target="_blank" rel="noopener noreferrer">YouTube</a>
          {%- endif -%}
          {%- if settings.social_pinterest != blank -%}
            <a href="{{ settings.social_pinterest }}" class="footer__link" target="_blank" rel="noopener noreferrer">Pinterest</a>
          {%- endif -%}
        </div>
      </div>

    </div>

    {%- comment -%} Bottom Bar {%- endcomment -%}
    <div class="footer__bottom">
      <p>{{ section.settings.copyright_text | default: '© 2026 Unique Collections. All rights reserved.' }}</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "footer-section",
  "settings": [
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Brand Description",
      "default": "Your destination for premium Indian ethnic wear. Handcrafted with love, delivered with care."
    },
    {
      "type": "link_list",
      "id": "quick_links",
      "label": "Quick Links Menu",
      "default": "footer"
    },
    {
      "type": "link_list",
      "id": "service_links",
      "label": "Customer Service Menu"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "© 2026 Unique Collections. All rights reserved."
    }
  ]
}
{% endschema %}
